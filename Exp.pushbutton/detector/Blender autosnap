import bpy
import os
from mathutils import Vector

output_folder = r"folder"
base_filename = "forward_render"
image_format = 'PNG'
render_resolution_x = 1024
render_resolution_y = 1024
move_distance = 1  # meters per step
num_photos = 60

# Ensure folder exists
if not os.path.exists(output_folder):
    os.makedirs(output_folder)

# Get camera
camera = bpy.data.objects['Camera']  # Change if your camera has a different name
scene = bpy.context.scene
scene.render.resolution_x = render_resolution_x
scene.render.resolution_y = render_resolution_y
scene.render.image_settings.file_format = image_format

#Take photos
for i in range(num_photos):
    filename = f"{base_filename}_{i+1}.{image_format.lower()}"
    scene.render.filepath = os.path.join(output_folder, filename)
    bpy.ops.render.render(write_still=True)
    print(f"Render saved at {scene.render.filepath}")

    # Move camera forward for next shot
    if i < num_photos - 1:
        camera.location += camera.matrix_world.to_quaternion() @ Vector((move_distance, 0, 0)) #Change move distance to change axis

